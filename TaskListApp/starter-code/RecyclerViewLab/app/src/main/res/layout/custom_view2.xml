<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <TextView android:id="@+id/colorSquareItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/holo_green_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/colorSquareItem"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Item Description"
        android:textColor="@android:color/black"
        android:id="@+id/taskItemTitleTV" />

    <Button
        android:id="@+id/editItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Edit Item"
        android:layout_below="@+id/colorSquareItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/removeItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Remove Item"
        android:layout_below="@+id/colorSquareItem"
        android:layout_toLeftOf="@+id/editItemButton"
        android:layout_toStartOf="@+id/editItemButton" />

</RelativeLayout>